//A single cross 10X10 cross bar under injection mode

topology = anynet;
network_file = anynet_file;

galaxyfly_n = 15;
galaxyfly_q = 29;
galaxyfly_a = 1;
galaxyfly_p = 7;

//single flit   packets
packet_size = 1;

//7 cycles delay in each input-queued router
credit_delay   = 2;
routing_delay  = 2;
vc_alloc_delay = 1;
sw_alloc_delay = 1;
st_final_delay = 1;

// Input and output a crossbar is 1, and the speed of internal routers speedup of is 2 times of the channel transmission rate.
input_speedup     = 1;
output_speedup    = 1;
internal_speedup  = 2.0;

//The buffer of each port has 256 policy is that each VC has 5 flits in privacy and  the others are shared by all VCs.
vc_buf_size = 256;
private_buf_size = 5;
wait_for_tail_credit = 0;

//
// Router architecture
//
vc_allocator = separable_input_first;
sw_allocator = separable_input_first;
alloc_iters  = 1;

warmup_periods = 3;
sim_count          = 1;

sample_period  = 10000;

routing_function = min;
num_vcs     = 4;

priority = none;
traffic       = uniform;

injection_rate = 0.8;

injection_rate_uses_flits=1;


k  = 4;
n  = 1;

watch_out=-;